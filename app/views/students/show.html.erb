<p><strong>Title: </strong>
    <%= @student12.title %>
</p>

<p><strong>Text: </strong>
    <%= @student12.text %>
</p>

<hr>
<h2> Comments </h2>
<% @student12.comments.each do |c| %>
<p> <strong>Commentor</strong> <%= c.commenter%></p>
<p> <strong>Comment</strong> <%=c.body%></p><% end %>



<hr>
<h2> Add comment </h2>
<%= form_for([@student12,@student12.comments.build]) do |f| %>

<p>
<%= f.label :commenter %><br>
<%= f.text_field :commenter %>
</p>
<p>
<%= f.label :body %><br>
<%= f.text_area :body %>
</p>
<%= f.submit%>
 <%end%>

<p><%= link_to 'Blog', students_path %> | <%= link_to 'Home Page', root_path%></p>
